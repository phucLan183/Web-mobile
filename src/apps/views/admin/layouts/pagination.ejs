<div class="panel-footer">
	<!-- Dau Trang  -->
	<nav aria-label="Page navigation example">
		<% if (pages > 0) {%>
		<ul class="pagination">
			<% if (current !== 1) {%>
			<li class="page-item">
				<a class="page-link" href="/admin/<%= namepage %>">&laquo;</a>
			</li>
			<%}%>
			<!-- Cac trang  -->
			<% var i = (current > 3 ? current - 2 : 1) %>
			<!-- Xuong dong -->
			<% if ( i !== 1 ) {%>
			<li class="page-item disabled">
				<a class="page-link" href="#">...</a>
			</li>
			<%}%>
			<!-- Vong lap qua tung trang va tang so trang -->
			<% for (; i <= current + 2 && i <= pages; i++) {%>
			<!-- Xuong dong -->
			<% if ( i == current ) {%>
			<li class="page-item active">
				<a class="page-link" href="/admin/<%= namepage %>/?page=<%= i %>">
					<%= i %>
				</a>
			</li>
			<%} else {%>
			<li class="page-item">
				<a class="page-link" href="/admin/<%= namepage %>/?page=<%= i %>">
					<%= i %>
				</a>
			</li>
			<%}%>
			<!--  -->
			<% if (i == current + 2 && i < pages) {%>
			<li class="page-item disabled">
				<a class="page-link" href="#">...</a>
			</li>
			<%}%> <%}%>
			<!-- Cuoi trang  -->
			<% if (current !== pages) {%>
			<li class="page-item">
				<a class="page-link" href="/admin/<%= namepage %>/?page=<%= pages %>">
					&raquo;
				</a>
			</li>
			<%}%>
		</ul>
		<%}%>
	</nav>
</div>