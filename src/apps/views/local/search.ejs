<!DOCTYPE html>
<html>
	<head>
		<%- include('layouts/head'); -%>
		<link rel="stylesheet" href="/static/local/css/search.css" />
	</head>

	<body>
		<!--	Header	-->
		<%- include('layouts/header'); -%>
		<!--	End Header	-->

		<!--	Body	-->
		<div id="body">
			<div class="container">
				<div class="row">
					<div class="col-lg-12 col-md-12 col-sm-12">
						<!-- Navigation  -->
						<%- include('layouts/navbar'); -%>
						<!-- End Navigation  -->
					</div>
				</div>
				<div class="row">
					<div id="main" class="col-lg-8 col-md-12 col-sm-12">
						<!--	Slider	-->
						<%- include('layouts/slider'); -%>
						<!--	End Slider	-->

						<!--	List Product	-->
						<div class="products">
							<div id="search-result">
								Kết quả tìm kiếm với sản phẩm
								<span><%= search %> (<%= length %>)</span>
							</div>
							<div class="product-list card-deck">
								<% if(dataPrd) {%> <% for (let product of dataPrd) {%>
								<div class="product-item card text-center">
									<a href="/product/<%= product.id %>"
										><img src="/static/local/images/<%= product.thumbnail %>"
									/></a>
									<h4>
										<a href="/product/<%= product.id %>"><%= product.name %></a>
									</h4>
									<p>Giá Bán: <span><%= product.price %></span></p>
								</div>
								<%}%> <%} else {%>
								<div class="product-item card text-center">
									<p>Không tìm thấy sản phẩm này !!</p>
								</div>
								<%}%>
							</div>
						</div>
						<!--	End List Product	-->

						<!-- Pagination -->
						<%- include('layouts/pagination'); -%>
						<!-- End Pagination -->
					</div>

					<!-- Sidebar -->
					<%- include('layouts/sidebar'); -%>
					<!-- End Sidebar -->
				</div>
			</div>
		</div>
		<!--	End Body	-->

		<!--	Footer	-->
		<%- include('layouts/footer'); -%>
		<!--	End Footer	-->
	</body>
</html>
