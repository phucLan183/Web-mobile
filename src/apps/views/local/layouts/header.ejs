<div id="header">
	<div class="container">
		<div class="row">
			<div id="logo" class="col-lg-3 col-md-3 col-sm-12">
				<h1>
					<a href="/">
						<img class="img-fluid" src="/static/local/images/logo1.png" />
					</a>
				</h1>
			</div>
			<div id="search" class="col-lg-6 col-md-6 col-sm-12">
				<form class="form-inline" action="/search" method="GET">
					<input class="form-control mt-3" type="search" name="keyword" placeholder="Tìm kiếm" aria-label="Search" />
					<button class="btn btn-danger mt-3" type="submit">Tìm kiếm</button>
				</form>
			</div>
			<div id="cart" class="col-lg-3 col-md-3 col-sm-12">
				<% if(!loggedIn) { %>
					<button class="login">
						<a class="login" href="/login">Đăng nhập</a>
					</button>
					<%} else if(loggedIn) {%>
						<a class="mt-4 mr-2" href="/logout">Đăng xuất</a>
						<a class="mt-4 mr-2" href="/cart">giỏ hàng</a>
						<span class="mt-3">
							<%= quantityCart %>
						</span>
						<%}%>
			</div>
		</div>
	</div>
	<!-- Toggler/collapsibe Button -->
	<button class="navbar-toggler navbar-light" type="button" data-toggle="collapse" data-target="#menu">
		<span class="navbar-toggler-icon"></span>
	</button>
</div>